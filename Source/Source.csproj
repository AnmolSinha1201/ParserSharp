<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>ParserSharp</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Description>Parser Combinator to write fluent parsers for binary inputs</Description>

    <GeneratedVersion>$([System.DateTime]::UtcNow.ToString(yy.MM.dd.HHmm))</GeneratedVersion>
    <AssemblyVersion Condition=" '$(GeneratedVersion)' == '' ">0.0.0.1</AssemblyVersion>
    <AssemblyVersion Condition=" '$(GeneratedVersion)' != '' ">$(GeneratedVersion)</AssemblyVersion>
    <Version Condition=" '$(GeneratedVersion)' == '' ">0.0.1.0</Version>
    <Version Condition=" '$(GeneratedVersion)' != '' ">$(GeneratedVersion)</Version>

  </PropertyGroup>

</Project>
